{% from 'MopaBootstrapBundle::flash.html.twig' import session_flash %}

{% block flashes %}
   {% if app.session.flashbag.peekAll|length > 0 %}
       <div class="flash_wrapper" >
         <div class="row-fluid">
			<div class="span12">
				{{ session_flash() }}
			</div>
		 </div>
      </div>      
	{% endif %}
{% endblock flashes %}