{% extends "DiggerIcardGalleryBundle::layout.html.twig" %}

{% block content %}

    <h1>{{ image.title }}</h1>

    <div class="col col-sm-8">
        <img src="{{ asset(image.getWebPath(image.path)) }}" alt="{{ image.title }}" class="img-responsive" />
    </div>

    <h2>Created At</h2>
    {{ image.createdAt|date("F jS \\a\\t g:ia") }}

    <h2>Filename</h2>
    {{ image.path }}

    <h2>Note:</h2>
    <div class="col col-sm-4">
        <h3><i>{{ image.getNote }}</i></h3>
    </div>
    <hr>
        <h4><a href="{{ path('home') }}">Back</a></h4>
    <hr>
{% endblock %}
             